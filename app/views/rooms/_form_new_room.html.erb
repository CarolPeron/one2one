

<%= simple_form_for @room do |f| %>
<%= f.input :type, collection: ['Comidinhas', 'Produtos do Brasil', 'Serviços', 'Câmbio', 'Aluguel', 'Doações', 'Venda de Garagem'], label: 'Escolha uma categoria:', label_html: { align: "left" } %>
<%= f.input :address, label: 'Qual a localização?', label_html: {align: 'left'} %>
<%= f.submit "Cadastrar", class: 'btn btn-primary' %>
<% end %>

